@model Online_Food_Ordering_Website.Models.CustumerRegister

@{
    ViewBag.Title = "LogIn";
}


<head>
<link rel="stylesheet" href="~/Content/login_style.css" />
</head>

<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal mainDiv">
        <h4 class="c">LogIn</h4>
        <button class="google_btn">
            Sign up with Google
        </button>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.cu_email, htmlAttributes: new { @class = "control-label col-md-2 labels" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cu_email, new { htmlAttributes = new { @class = "form-control input_fields" } })
                @Html.ValidationMessageFor(model => model.cu_email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cu_password, htmlAttributes: new { @class = "control-label col-md-2 labels" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cu_password, new { htmlAttributes = new { @class = "form-control input_fields" } })
                @Html.ValidationMessageFor(model => model.cu_password, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LOGIN" class="btn btn-default" />
            </div>
        </div>
        <hr />
        <p class="pCenter">Have no account?</p>

        @Html.ActionLink("Signup", "RegisterCustumer", "main")
    </div>
    }
</body>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
